@model WebApplication1.Models.ViewModels.IndexHomeViewModel
@using WebApplication1.Models

@{
    ViewBag.Title = "Home Page";
}

@section styles
{
    <link rel="stylesheet" href="~/Content/bootstrap-datepicker3.css" />
    <link rel="stylesheet" href="~/Content/IndexHome.css" />
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/IndexHome.js"></script>
}

<h1>Learning Html Helpers</h1>
@Html.ValidationSummary(true)

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.FamilyName, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FamilyName, new { @class = "form-control", maxlength = 2 })
            @Html.ValidationMessageFor(m => m.FamilyName, null, new { @class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", maxlength = 2 })
            @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Birthday, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Birthday, "{0:MM/dd/yyyy}", new { @class = "form-control", id = "datepicker", @readonly = true })
            @Html.ValidationMessageFor(m => m.Birthday, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedValue, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.SelectedValue, Model.Areas, GlobalRes.White_space, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SelectedValue, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Gender, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            <label class="radio-inline">
                @Html.RadioButtonFor(m => m.Gender, ApplicationUser.GenderTraversal.Male, new { id = "Male" })
                @ApplicationUser.GenderTraversal.Male
            </label>
            <label class="radio-inline">
                @Html.RadioButtonFor(m => m.Gender, ApplicationUser.GenderTraversal.Female, new { id = "Female" })
                @ApplicationUser.GenderTraversal.Female
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.Noticed)
                    I agree with the terms of your website.
                </label>
                <p>
                    @Html.ValidationMessageFor(m => m.Noticed, null, new { @class = "text-danger" })
                </p>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Confirm" class="btn btn-primary" />
        </div>
    </div>
}